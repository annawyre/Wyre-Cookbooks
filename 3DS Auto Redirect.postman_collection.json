			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Should expect an id to return\", function() {",
							"    let json = pm.response.json();",
							"    pm.environment.set('reservation', json['reservation']);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"auth": {
					"type": "bearer",
